INSERT INTO Marks (StudentID, Subject, Marks) VALUES (3, 'Math', 95);
INSERT INTO Marks (StudentID, Subject, Marks) VALUES (5, 'Science', 70);
SELECT * FROM Students;
SELECT * FROM Marks;
SELECT Subject, MAX(Marks) AS Highest_Marks
FROM Marks
GROUP BY Subject;
