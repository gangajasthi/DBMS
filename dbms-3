INSERT INTO Courses VALUES (103, 'Networks', 'IT');
SELECT Students.Name, Students.Department, Courses.CourseName
FROM Students
INNER JOIN Courses
ON Students.Department = Courses.Department;
SELECT Students.Name, Courses.CourseName
FROM Students
LEFT JOIN Courses
ON Students.Department = Courses.Department;
